<div id="posts-show">
  <h1><%= @post.title%></h1>
  <div class="metadata">by: <strong><%= @post.user.name %></strong> at <%= format_timestamp(@post.created_at) %></div>
  <div class="content">
    <%= @post.content.html_safe %>
  </div>
  <div class="comments">
    <h2>Comments</h2>
    <%= will_paginate @comments %>
    <ul id="comments" class="comments", data-post-id="<%= @post.id %>">
      <%= render @comments %>
    </ul>
    <div id="infinite-scrolling">
    </div>
  </div>
</div>
